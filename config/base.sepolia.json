{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Base Sepolia network configuration (RPC endpoints, chainId, explorer).",
  "network": {
    "key": "base-sepolia",
    "name": "Base Sepolia",
    "chainId": 84532,
    "rpc": {
      "default": "https://sepolia.base.org",
      "fallbacks": [
        "https://base-sepolia-rpc.publicnode.com"
      ]
    },
    "explorer": {
      "name": "BaseScan Sepolia",
      "url": "https://sepolia.basescan.org"
    }
  },
  "defaults": {
    "rpcTimeoutMs": 10000,
    "retries": 2
  }
}
